<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="DarkBackgroundColor">#FF2D2D30</Color>
    <Color x:Key="DarkForegroundColor">#FFF5F5F5</Color>
    <Color x:Key="DarkAccentColor">#FF007ACC</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="AccentBrush" 
                     Color="{StaticResource DarkAccentColor}"/>

    <!-- Control Templates -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
    </Style>

</ResourceDictionary>
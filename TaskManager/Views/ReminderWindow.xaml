<!-- ReminderWindow.xaml -->
<Window x:Class="TaskManager.ReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Reminder" Height="200" Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock x:Name="ReminderText" FontSize="16" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="10"/>
        <Button Content="OK" Width="80" HorizontalAlignment="Center" Margin="10" Click="OkButton_Click"/>
    </StackPanel>
</Window>

<Window x:Class="TaskManager.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        Topmost="True">
    <Border Background="#FF2D2D30" Padding="20" CornerRadius="5">
        <StackPanel>
            <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="{Binding Description}" Foreground="White"/>
        </StackPanel>
    </Border>
</Window>